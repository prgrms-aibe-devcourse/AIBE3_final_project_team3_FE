  "components": {
    "schemas": {
      "ApiResponseLong": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "msg"
        ]
      },
      "ApiResponseVoid": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            
          }
        },
        "required": [
          "msg"
        ]
      },
      "ApiResponseMessageResponse": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/MessageResponse"
          }
        },
        "required": [
          "msg"
        ]
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "senderId": {
            "type": "integer",
            "format": "int64"
          },
          "sender": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "messageType": {
            "type": "string",
            "enum": [
              "TEXT",
              "IMAGE",
              "FILE",
              "SYSTEM"
            ]
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "memo": {
            "type": "string"
          },
          "serviceId": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "CreatePublicChatReq": {
        "type": "object",
        "properties": {
          "roomName": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "roomName"
        ]
      },
      "ApiResponseChatRoomResp": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/ChatRoomResp"
          }
        },
        "required": [
          "msg"
        ]
      },
      "ChatRoomResp": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "roomType": {
            "type": "string",
            "enum": [
              "DIRECT",
              "GROUP"
            ]
          },
          "members": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MemberDto"
            }
          }
        }
      },
      "MemberDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nickname": {
            "type": "string"
          }
        }
      },
      "CreateGroupChatReq": {
        "type": "object",
        "properties": {
          "roomName": {
            "type": "string"
          },
          "memberIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int64"
            },
            "minItems": 1
          }
        },
        "required": [
          "memberIds",
          "roomName"
        ]
      },
      "CreateDirectChatReq": {
        "type": "object",
        "properties": {
          "partnerId": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": [
          "partnerId"
        ]
      },
      "SigninReq": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "description": "사용자 이메일 주소",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "비밀번호 (8자 이상, 대소문자/숫자 필수)",
            "example": "P@sswOrd123",
            "maxLength": 20,
            "minLength": 8
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "ApiResponseString": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "string"
          }
        },
        "required": [
          "msg"
        ]
      },
      "MemberJoinReq": {
        "type": "object",
        "description": "사용자의 회원가입 요청 정보",
        "properties": {
          "email": {
            "type": "string",
            "description": "사용자 이메일 주소",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "description": "비밀번호 (8자 이상, 대소문자/숫자 필수)",
            "example": "P@sswOrd123",
            "maxLength": 20,
            "minLength": 8
          },
          "passwordConfirm": {
            "type": "string",
            "description": "비밀번호 확인 (password와 일치해야 함)"
          },
          "name": {
            "type": "string",
            "description": "실명"
          },
          "country": {
            "type": "string",
            "description": "국가 코드 (ISO 3166 Alpha-2)",
            "example": "KR"
          },
          "nickname": {
            "type": "string",
            "description": "사용자 닉네임",
            "example": "MixMaster"
          },
          "englishLevel": {
            "type": "string",
            "description": "영어 실력 레벨",
            "enum": [
              "BEGINNER",
              "INTERMEDIATE",
              "ADVANCED",
              "NATIVE"
            ]
          },
          "interest": {
            "type": "string",
            "description": "관심사",
            "example": "요리, 여행"
          },
          "description": {
            "type": "string",
            "description": "자기소개"
          }
        },
        "required": [
          "country",
          "description",
          "email",
          "englishLevel",
          "interest",
          "name",
          "nickname",
          "password",
          "passwordConfirm"
        ]
      },
      "ApiResponseMemberSummaryResp": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "$ref": "#/components/schemas/MemberSummaryResp"
          }
        },
        "required": [
          "msg"
        ]
      },
      "MemberSummaryResp": {
        "type": "object",
        "description": "회원가입 완료 또는 멤버 조회 시 반환되는 요약된 사용자 정보",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "사용자 고유 ID",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "사용자의 실명",
            "example": "홍길동"
          },
          "country": {
            "type": "string",
            "description": "국가 코드 (Alpha-2)",
            "example": "KR"
          },
          "nickname": {
            "type": "string",
            "description": "사용자 닉네임",
            "example": "MixMaster"
          },
          "englishLevel": {
            "type": "string",
            "description": "영어 실력 레벨",
            "example": "INTERMEDIATE"
          },
          "interest": {
            "type": "string",
            "description": "관심사 목록",
            "example": "TRAVEL, FOOD"
          },
          "description": {
            "type": "string",
            "description": "자기소개"
          }
        }
      },
      "ApiResponseListChatRoomResp": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ChatRoomResp"
            }
          }
        },
        "required": [
          "msg"
        ]
      },
      "ApiResponseListMessageResponse": {
        "type": "object",
        "properties": {
          "msg": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MessageResponse"
            }
          }
        },
        "required": [
          "msg"
        ]
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}